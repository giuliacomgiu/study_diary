<% study_item.errors.full_messages.each do |message| %>
  <p><%= message %></p>
<% end %>

<%= form_with model: study_item, local: true do |f| %>
	<%= f.label :title, "Título" %><br>
  <%= f.text_field :title %><br><br>
  
  <%= f.label :description, "Descrição" %><br>
  <%= f.text_area :description %><br><br>
  
  <%= f.label :deadline, "Prazo" %><br>
  <%= f.date_field :deadline %><br><br>
  
  <%= f.label :category_id, "Categoria" %><br>
  <%= f.collection_select(:category_id, categories.order(:title), :id, :title) %><br><br>
  
  <%= f.label :type, "Tipo" %><br>
  <%= f.collection_select :type_id, types, :id, :title %>

	<p><%= f.submit %></p>
	<p><%= link_to 'Voltar', study_item%></p>
<% end %>